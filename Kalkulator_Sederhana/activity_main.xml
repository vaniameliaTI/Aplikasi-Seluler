<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textSize="36sp"
        android:background="#EEEEEE"
        android:textColor="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginTop="16dp">

        <!-- Baris pertama -->
        <Button android:id="@+id/btn7" style="@style/CalcBtn" android:text="7" />
        <Button android:id="@+id/btn8" style="@style/CalcBtn" android:text="8" />
        <Button android:id="@+id/btn9" style="@style/CalcBtn" android:text="9" />
        <Button android:id="@+id/btnDivide" style="@style/CalcBtnDark" android:text="/" />

        <!-- Baris kedua -->
        <Button android:id="@+id/btn4" style="@style/CalcBtn" android:text="4" />
        <Button android:id="@+id/btn5" style="@style/CalcBtn" android:text="5" />
        <Button android:id="@+id/btn6" style="@style/CalcBtn" android:text="6" />
        <Button android:id="@+id/btnMultiply" style="@style/CalcBtnDark" android:text="*" />

        <!-- Baris ketiga -->
        <Button android:id="@+id/btn1" style="@style/CalcBtn" android:text="1" />
        <Button android:id="@+id/btn2" style="@style/CalcBtn" android:text="2" />
        <Button android:id="@+id/btn3" style="@style/CalcBtn" android:text="3" />
        <Button android:id="@+id/btnSubtract" style="@style/CalcBtnDark" android:text="-" />

        <!-- Baris keempat -->
        <Button android:id="@+id/btn0" style="@style/CalcBtn" android:text="0" />
        <Button android:id="@+id/btnClear" style="@style/CalcBtnGray" android:text="C" />
        <Button android:id="@+id/btnEquals" style="@style/CalcBtnDark" android:text="=" />
        <Button android:id="@+id/btnAdd" style="@style/CalcBtnDark" android:text="+" />

    </GridLayout>
</LinearLayout>
